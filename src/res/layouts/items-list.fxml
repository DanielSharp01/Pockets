<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ItemsListController">
    <HBox alignment="CENTER_LEFT" spacing="6.0">
        <padding>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
        </padding>
        <TextField promptText="Search" prefWidth="300" />
        <Button minWidth="32" minHeight="32" styleClass="add-button" pickOnBounds=""/>
    </HBox>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
        <ListView fx:id="itemContents">
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
        </ListView>
    </ScrollPane>
</VBox>
